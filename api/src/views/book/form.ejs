<form method="POST" class="mt-5" action="<%= action %>">
    <input type="hidden" name="_METHOD" value="PUT"/>
    <div class="form-group">
        <label for="inputTitle">Заголовок</label>
        <input type="text"
            value="<%= book.title %>"
            name="title"
            class="form-control"
            id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <textarea
            rows="3"
            name="description"
            class="form-control"
            id="inputDesc"><%= book.description %></textarea>
    </div>

    <div class="form-group">
        <label for="inputDesc">Автор</label>
        <textarea
            rows="3"
            name="authors"
            class="form-control"
            id="inputDesc"><%= book.authors %></textarea>
    </div>

    <div class="form-group">
        <label for="inputDesc">favorite</label>
        <textarea
            rows="3"
            name="favorite"
            class="form-control"
            id="inputDesc"><%= book.favorite %></textarea>
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>